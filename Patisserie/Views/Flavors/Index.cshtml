@{
  Layout = "_Layout";
}

@using Patisserie.Models
@model List<Patisserie.Models.Flavor>



<div class="container col-5">
  @if (Model.Count == 0)
  {
    <h4>No flavors listed.</h4>
    <br/>
    <h4>@Html.ActionLink("+ your first Flavor", "Create", "Flavors")</h4>
  }
  else
  {
    <h3>Flavors:</h3>
    <br/>
    @foreach(Flavors flavor in Model)
    {
      <h4>@Html.ActionLink($"{flavor.Name}", "Details", "Flavors", new { id = flavor.FlavorsId})</h4>
    }
    <br/>
    <h4>@Html.ActionLink("+ Flavors", "Create", "Flavors")</h4>

  }
</div>