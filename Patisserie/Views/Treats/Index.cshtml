@{
  Layout = "_Layout";
}

@using Patisserie.Models
@model List<Patisserie.Models.Treat>



<div class="container col-5">
  @if (Model.Count == 0)
  {
    <h4>No treats listed.</h4>
    <br/>
    <h4>@Html.ActionLink("+ your first Treat", "Create", "Treats")</h4>
  }
  else
  {
    <h3>Treats for @User.Identity.Name:</h3>
    <br/>
    @foreach(Treat treat in Model)
    {
      <h4>@Html.ActionLink($"{treat.Type}", "Details", "Treats", new { id = treat.TreatId})</h4>
    }
    <br/>
    <h4>@Html.ActionLink("+ Treats", "Create", "Treats")</h4>
  }
</div>